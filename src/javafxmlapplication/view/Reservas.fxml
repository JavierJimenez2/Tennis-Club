                              <DatePicker fx:id="DatePicker" cacheShape="false" centerShape="false" editable="false" onAction="#datePickerAction" scaleShape="false" styleClass="date-picker" HBox.hgrow="ALWAYS" />
                           </children>
                           <VBox.margin>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </VBox.margin>
                        </HBox>
                        <ScrollPane fx:id="scrollPane" hbarPolicy="NEVER" pannable="true" prefHeight="450.0" prefWidth="638.0" VBox.vgrow="ALWAYS" />
                     </children>
                  </VBox>
            </content>
          </Tab>
          <Tab fx:id="MisReservasTab" text="Mis Reservas">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <AnchorPane id="InferiorVPane" minHeight="0.0" minWidth="0.0" prefHeight="379.0" prefWidth="695.0">
                           <children>
                              <ListView fx:id="listView" layoutX="23.0" layoutY="95.0" prefHeight="374.0" prefWidth="642.0">
                                 <padding>
                                    <Insets left="10.0" right="10.0" />
                                 </padding>
                              </ListView>
                              <Label layoutX="75.0" layoutY="77.0" text="Date" />
                              <Label layoutX="225.0" layoutY="77.0" prefHeight="18.0" prefWidth="38.0" text="Court" />
                              <Label layoutX="400.0" layoutY="77.0" text="Start/End" />
                              <Label layoutX="600.0" layoutY="77.0" text="Paid" />
                           </children>
                        </AnchorPane>
                        <Button fx:id="deleteButton" layoutX="690.0" layoutY="442.0" mnemonicParsing="false" onAction="#deleteAction" text="Delete" />
                     </children></AnchorPane>
            </content>
          </Tab>
        </tabs>
         <BorderPane.margin>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
         </BorderPane.margin>
      </TabPane>
   </center>
   <top>
      <HBox fx:id="menuBar" alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="10.0" styleClass="menu-bar" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="appTitle" styleClass="app-title" text="GreenBall" HBox.hgrow="ALWAYS" />
            <StackPane fx:id="stackPane" prefHeight="100.0" prefWidth="17.0" HBox.hgrow="SOMETIMES">
               <HBox.margin>
                  <Insets right="20.0" />
               </HBox.margin>
               <children>
                  <ImageView fx:id="avatar" fitHeight="60.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" StackPane.alignment="CENTER_RIGHT">
                     <image>
                        <Image url="@css/img/icons/avatar_icon.png" />
                     </image>
                  </ImageView>
                  <ComboBox fx:id="choice" maxWidth="222.0" onMouseEntered="#ChoiceBoxHover" opacity="0.0" prefHeight="42.0" prefWidth="16.0" styleClass="choice-box" />
               </children>
            </StackPane>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </HBox>
   </top>
